                      <div class="h5 mb-0 font-weight-bold text-gray-800 d-none" id="cardTotalClients">-</div>
                      <div class="text-center" id="spinnerCardTotalClients">
                        <div class="spinner-border" role="status">
                          <span class="sr-only">Loading...</span>
                        </div>
                      </div>
                    </div>
                    <div class="col-auto">
                      <i class="fas fa-user fa-2x text-gray-300"></i>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <!-- Earnings (Monthly) Card Example -->
