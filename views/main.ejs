      <div id="content">
        <!-- Topbar -->
        <%- include("partials/topbar") %>
        <!-- End of Topbar -->
        <!-- Begin Page Content -->
        <div class="container-fluid">
          <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-0 text-gray-800">Cuenta Corriente</h1>
          </div>
          <!-- Cards -->
          <div class="row">
            <!-- Card Total Clientes -->
